<header class="p-1">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <%= link_to 'Odin Facebook', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto pe-5">
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Friend requests', friend_requests_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <% if current_user.avatar.attached? %> 
                <%= image_tag current_user.avatar.variant(:circle), class: 'rounded-circle' %>
              <% else %>
                <img height="25" width="30" src="/images.webp" alt="default profile image" />
              <% end %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Profile', profile_path, class: "nav-link" %>
              </li>
              <li>
                <%= link_to 'Sign out', destroy_user_session_path, data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, class: "nav-link" %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

