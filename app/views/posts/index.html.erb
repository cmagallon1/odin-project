<%= render 'layouts/header' %>

<main class="container p-2">
  <div class="row">
    <div class="col-10">
      <h2>Posts</h2>
    </div>
    <div class="col-2">
      <%= link_to 'Create Post', new_post_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="mt-5 row">
    <div class="col-10 offset-1">
      <% if @posts.count.zero? %>
        <label>No posts to show</label>
      <% else %>
        <% @posts.each do |post| %>
          <%= render 'post', post: post, full_view: false, action_view: 'index' %>
        <% end %>
      <% end %>
    </div>
  </div>
</main>